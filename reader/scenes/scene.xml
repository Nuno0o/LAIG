<dsx>
    <scene root="root" axis_length="3" />
 
    <views default="def_view" >
        <perspective id="persp" near="0.1" far="500" angle="45">
            <from x="15" y="15" z="15" />
            <to x="0" y="0" z="0" />
        </perspective>
        <perspective id="persp2" near="0.1" far="100" angle="90">
            <from x="10" y="5" z="20" />
            <to x="0" y="0" z="1" />
        </perspective>
        <perspective id="persp3" near="1" far="20" angle="20">
            <from x="0" y="0" z="0" />
            <to x="10" y="15" z="15"/>
        </perspective>  
    </views>
 
    <illumination doublesided="0" local="0" >
        <ambient r="0" g="0" b="0" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </illumination>
 
    <lights>
        <omni id="light_omni" enabled="1" >
            <location x="9" y="9" z="9" w="1" />
            <ambient r="0" g="0" b="0" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </omni>
        <spot id="light_spot" enabled="1" angle="20" exponent="2">
            <target x="0" y="0" z="0" />
            <location x="9" y="9" z="0" />
            <ambient r="0" g="0" b="0" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="0" b="1" a="1" />
        </spot>
    </lights>
 
    <textures>
        <texture id="wood" file="../resources/images/wood.png" length_s="0.2" length_t="0.3" />
    </textures>
   
    <materials>
        <material id="matDefault" >
            <emission r="0.2" g="0.4" b="0.8" a="1" />
            <ambient r="0.2" g="0.4" b="0.8" a="1" />
            <diffuse r="0.2" g="0.4" b="0.8" a="1" />
            <specular r="0.2" g="0.4" b="0.8" a="1" />
            <shininess value="10" />
        </material>
       
        <material id="matCube" >
            <emission r="1" g="1" b="1" a="1" />
            <ambient r="0.3" g="0.3" b="0.3" a="1" />
            <diffuse r="0.8" g="0.4" b="0.4" a="1" />
            <specular r="0" g="0.2" b="0.8" a="1" />
            <shininess value="10" />
        </material>
    </materials>
   
    <transformations>
        <transformation id="transWallX">
            <translate x="0.5" y="0.5" z="0" />
        </transformation>
        <transformation id="transWallZ">
            <translate x="0" y="0.5" z="0.5" />
            <rotate axis="y" angle="90" />
        </transformation>
        <transformation id="transToOctant">
            <translate x="4.5" y="0" z="4.5" />
        </transformation>
        <transformation id="transFloor">
            <scale x="9" y="1" z="9" />
            <rotate axis="x" angle="-90" />
        </transformation>
        <transformation id="transC1">
            <translate x="0" y="1.5" z="0" />
            <scale x="3" y="3" z="3" />
        </transformation>
        <transformation id="transC2">
            <translate x="0" y="3.5" z="0" />
        </transformation>
    </transformations>
   
    <primitives>
        <primitive id="rect">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="-0.5" />
        </primitive>
    </primitives>
 
    <components>
        <component id="primRect">
            <transformation>
            </transformation>
            <materials>
                <material id="matDefault" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="rect" />
            </children>
        </component>
       
        <component id="Wall">
            <transformation>
                <scale x="9" y="6" z="9" />
            </transformation>
            <materials>
                <material id="matDefault" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="primRect" />
            </children>
        </component>
       
        <component id="WallX">
            <transformation>
                <transformationref id="transWallX" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="Wall" />
            </children>
        </component>
 
        <component id="WallZ">
            <transformation>
                <transformationref id="transWallZ" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="Wall" />
            </children>
        </component>
 
        <component id="Floor">
            <transformation>
                <transformationref id="transFloor" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="wood" />
            <children>
                <componentref id="primRect" />
            </children>
        </component>
       
        <component id="CubeWall1">
            <transformation>
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="primRect" />
            </children>
        </component>
        <component id="CubeWall2">
            <transformation>
                <rotate axis="y" angle="90"/>
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="primRect" />
            </children>
        </component>
        <component id="CubeWall3">
            <transformation>
                <rotate axis="y" angle="180"/>
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="primRect" />
            </children>
        </component>
        <component id="CubeWall4">
            <transformation>
                <rotate axis="y" angle="240"/>
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="primRect" />
            </children>
        </component>
        <component id="CubeWall5">
            <transformation>
                <rotate axis="x" angle="90"/>
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="primRect" />
            </children>
        </component>
        <component id="CubeWall6">
            <transformation>
                <rotate axis="x" angle="180"/>
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="primRect" />
            </children>
        </component>
 
        <component id="Cube">
            <transformation>
            </transformation>
            <materials>
                <material id="matCube" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="CubeWall1" />
                <componentref id="CubeWall2" />
                <componentref id="CubeWall3" />
                <componentref id="CubeWall4" />
                <componentref id="CubeWall5" />
                <componentref id="CubeWall6" />
            </children>
        </component>
 
        <component id="C1">
            <transformation>
                <transformationref id="transC1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="Cube" />
            </children>
        </component>
 
        <component id="C2">
            <transformation>
                <transformationref id="transC2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="Cube" />
            </children>
        </component>
    </components>
 
</dsx>